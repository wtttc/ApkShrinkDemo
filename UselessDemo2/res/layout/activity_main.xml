<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.uselessdemo.MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello" />

    <Button
        android:id="@+id/btn_library_jar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start library jar activity" />

    <Button
        android:id="@+id/btn_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start library activity" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/used_in_activity_main_layout" />

    <ImageView
        android:id="@+id/iv_used_in_activity_main"
        android:layout_width="100dp"
        android:layout_height="100dp" />

</LinearLayout>